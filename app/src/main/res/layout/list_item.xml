<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@android:color/darker_gray">

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

            <ImageView
                    android:id="@+id/picView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="2dp"
                    app:srcCompat="@mipmap/ic_launcher_round" android:layout_alignParentStart="true"
                    android:layout_marginStart="6dp"
                    android:layout_alignParentLeft="true" android:layout_marginLeft="38dp"
                    android:layout_centerVertical="true"/>

            <TextView
                    android:id="@+id/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/picView"
                    android:text="TÃ­tulo"
                    android:textSize="18sp"
                    android:textStyle="bold" android:layout_centerVertical="true" android:layout_marginLeft="12dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>